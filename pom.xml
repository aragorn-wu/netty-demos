        <hibernate-validator.version>5.1.1.Final</hibernate-validator.version>
        <commons-dbcp.version>1.4</commons-dbcp.version>
        <ehcache.version>2.8.2</ehcache.version>
        <mysql-connector-java.version>5.1.30</mysql-connector-java.version>
        <derby.version>10.10.2.0</derby.version>
        <findbugs.version>2.0.3</findbugs.version>

        <junit.version>4.11</junit.version>
        <dbunit.version>2.5.0</dbunit.version>
        <spring-test-dbunit.version>1.1.0</spring-test-dbunit.version>
        <mockito.version>1.9.5</mockito.version>
        <jsonpath.version>0.9.1</jsonpath.version>
        <greenmail.version>1.3.1b</greenmail.version>
        <servlet-3.0-api.version>1.0</servlet-3.0-api.version>


        <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
        <maven-resources-plugin.version>2.6</maven-resources-plugin.version>
        <maven-jar-plugin.version>2.4</maven-jar-plugin.version>
        <maven-surefire-report-plugin.version>2.17</maven-surefire-report-plugin.version>
        <maven-site-plugin.version>3.3</maven-site-plugin.version>
        <maven-enforcer-plugin.version>1.3.1</maven-enforcer-plugin.version>
        <maven-project-info-reports-plugin.version>2.7</maven-project-info-reports-plugin.version>
