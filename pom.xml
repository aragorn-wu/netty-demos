<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.git.wuqf</groupId>
    <artifactId>netty-demos</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>

        <module>netty-rpc</module>
        <module>netty-official-demos</module>
    </modules>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.locale>en_US</project.build.locale>


        <lombok.version>1.12.6</lombok.version>
        <guava.version>17.0</guava.version>
        <commons-lang3.version>3.3.2</commons-lang3.version>
        <commons-io.version>2.4</commons-io.version>
        <commons-pool2.version>2.2</commons-pool2.version>
        <joda-time.version>2.3</joda-time.version>
        <aspectj.version>1.8.0</aspectj.version>
        <springframework.version>4.0.3.RELEASE</springframework.version>
        <hibernate-jpa-2.1-api.version>1.0.0.Final</hibernate-jpa-2.1-api.version>
        <hibernate.version>4.3.5.Final</hibernate.version>
        <spring-data-jpa.version>1.5.2.RELEASE</spring-data-jpa.version>
        <netty.version>4.1.14.Final</netty.version>
        <kryo.version>2.24.0</kryo.version>
        <kryo-serializers.version>0.26</kryo-serializers.version>
        <validation-api.version>1.1.0.Final</validation-api.version>
        <javax.mail-api.version>1.5.2</javax.mail-api.version>
        <jackson.version>2.4.0-rc2</jackson.version>
        <freemarker.version>2.3.20</freemarker.version>
        <logback.version>1.1.2</logback.version>
        <slf4j.version>1.7.7</slf4j.version>

        <javaee-web-api.version>7.0</javaee-web-api.version>
